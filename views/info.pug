doctype html
html
    head
        meta(charset='utf-8')
        title Display a map
        meta(name='viewport', content='initial-scale=1,maximum-scale=1,user-scalable=no')
        script(src='https://api.mapbox.com/mapbox-gl-js/v1.8.1/mapbox-gl.js')
        link(href='https://api.mapbox.com/mapbox-gl-js/v1.8.1/mapbox-gl.css', rel='stylesheet')
        style.
            body { margin: 0; padding: 0; }
            #map { position: absolute; top: 0; bottom: 0; width: 100%; }
    body
        #map
        script.
            mapboxgl.accessToken = 'pk.eyJ1Ijoid3JvbmdzeW50YXgiLCJhIjoiY2s3YXVvaGc2MDU3ZzNtbWduc3YycHd3cCJ9.wOKQmOnQd0wwsB4vEvEU0A';
            var map = new mapboxgl.Map({
                container: 'map', // container id
                style: #{style}, // stylesheet location
                center: [-113.490, 53.528], // starting position [lng, lat]
                zoom: 10 // starting zoom
            });

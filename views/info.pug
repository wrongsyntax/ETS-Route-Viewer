doctype html
html
    head
        meta(charset='utf-8')
        title Display a map
        meta(name='viewport', content='initial-scale=1,maximum-scale=1,user-scalable=no')
        script(src='https://api.mapbox.com/mapbox-gl-js/v1.8.1/mapbox-gl.js')
        link(href='https://api.mapbox.com/mapbox-gl-js/v1.8.1/mapbox-gl.css', rel='stylesheet')
        link(href='/stylesheets/style.css', rel='stylesheet')
    body
        p#routeLabel Route #
        h1#routeHeader #{routeNum} <span class='destination'>#{name}</span>
        p#nextBus Next bus in [] minutes
        div(class='gridContainer')
            div(class='gridItem')
                // Table goes here
            div(class='gridItem')
                #map
                script.
                    mapboxgl.accessToken = 'pk.eyJ1Ijoid3JvbmdzeW50YXgiLCJhIjoiY2s3Y3Zrb2RwMDhpbzNnbnc1emllajFiayJ9.b5jR0wDt8Yuy_VW-aT_zUg';
                    var map = new mapboxgl.Map({
                        container: 'map', // container id
                        style: #{style}, // stylesheet location
                        center: [-113.490, 53.528], // starting position [lng, lat]
                        zoom: 9.5 // starting zoom
                    });
                    // Add geolocate control to the map.
                    map.addControl(
                        new mapboxgl.GeolocateControl({
                            positionOptions: {
                                enableHighAccuracy: true
                            },
                            trackUserLocation: true
                        })
                    );
            div(class='gridItem')
                // Nearby routes go here
